<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.voyage.travelcompanionapp.ParametreActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/nom_edit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Nom"
        android:layout_below="@+id/email_edit_user"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/email_edit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:onClick="onClick"
        android:layout_marginTop="62dp"
        android:text="Email"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentStart="true"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/pwd_edit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:onClick="onClick"
        android:text="Mot de passe"
        android:layout_below="@+id/nom_edit_user"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        android:padding="16dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>

