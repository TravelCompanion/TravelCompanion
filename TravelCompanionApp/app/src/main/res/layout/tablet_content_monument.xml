<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.voyage.travelcompanionapp.MonumentActivity">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_monumentActivity"
            android:minHeight="?attr/actionBarSize"
            android:background="#2196F3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/room"
            android:layout_marginRight="39dp"
            android:layout_marginEnd="39dp"
            android:layout_alignTop="@+id/imageView7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="135dp"
            app:srcCompat="@mipmap/room1"
            android:layout_below="@+id/toolbar_monumentActivity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />

        <TextView
            android:id="@+id/textView_descmonu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="TextView"
            android:layout_marginTop="67dp"
            android:layout_below="@+id/imageView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp" />


        <Button
            android:id="@+id/button_visite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VisitÃ©"
            android:layout_marginTop="200dp"
            android:layout_below="@+id/textView_descmonu"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>