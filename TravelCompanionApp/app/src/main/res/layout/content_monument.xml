<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.voyage.travelcompanionapp.MonumentActivity">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_monumentActivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/room"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toRightOf="@+id/button_visite"
        android:layout_toEndOf="@+id/button_visite" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@mipmap/room1"
        android:layout_below="@+id/toolbar_monumentActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_descmonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:text="TextView"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="38dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/button_visite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VisitÃ©"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/textView_descmonu"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>